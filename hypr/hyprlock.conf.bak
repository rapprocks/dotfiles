# ────────────────────────────────────────────────────────────
#  Hyprlock — rose-pine theme
# ────────────────────────────────────────────────────────────

$color = rgba(25, 23, 36, 1)
$color_rose = rgba(18,18,18,1)

$inner_color = rgba(25, 23, 36, 1)
$outer_color = rgba(49, 116, 143, 1)
$outer_color_rose = rgba(235, 188, 186, 1)

$font_color = rgba(224, 222, 244, 1)
$placeholder_color = rgba(205,214,244,0.6)
$check_color = rgba(196,167,231,1)
$fail_color  = rgba(235,111,146,1)

$font = "JetbrainsMono Nerd Font Mono"

auth {
  fingerprint {
    enabled=true
  }
}

#background {
#  monitor=
#  color=$color_rose
#}

background {
    monitor =
    path = screenshot
    blur_passes = 3
}

general {
}

# USER-PHOTO
image {
    monitor =
    path = ~/Pictures/face.png
    border_size = 0
    border_color = rgba(255, 255, 255, 0)
    size = 105
    rounding = -1.0
    rotate = 0
    reload_time = 0
    reload_cmd = 
    position = -105, 30
    halign = center
    valign = center
}

# USER-NAME
label {
    monitor =
    text = $USER
    color = rgba(255, 255, 255, .65)
    font_size = 22
    font_family = $font
    position = 0, 30
    halign = center
    valign = center
}

input-field {
  monitor=
  size=600, 100
  check_color=$check_color
  fade_on_empty=false
  fail_text=Wrong
  font_color=$font_color
  font_family=$font
  halign=center
  inner_color=$color_rose
  outer_color=$outer_color_rose
  outline_thickness=4
  placeholder_text=Enter Password
  position=30, -125
  rounding=0
  shadow_passes=0
  valign=center
}

# TIME
label {
  monitor =
  text = $TIME
  color = $font_color
  font_size = 90
  font_family = $font
  position = -30, 0
  halign = right
  valign = top
}

label {
  monitor=
  color=rgba(18, 18, 18, 1)
  font_family=$font
  font_size=24
  halign=center
  position=0, -100
  text=$FPRINTPROMPT
  text_align=center
  valign=center
}
